{
	"version": "0.1.0",

	"lookupCommand": "which",
	"windows": {
		"lookupCommand": "where"
	},

	"requirements": [{
		"name": "git",
		"command": "git"
	},{
		"name": "haxe",
		"command": "haxe",
		"testArgument": "-version"
	},{
		"name": "haxelib",
		"command": "haxelib",
		"testArgument": "list"
	},{
		"name": "copy",
		"command": "cp",
		"windows": {
			"command": "copy",
			"testArgument": "/?"
		}
	}],

	"tasks": [{
		"name": "init:git",
		"description": "Initializes git submodules",
		"groups": [{
			"name": "init",
			"rank": 1
		}],
		"command": "git",
		"arguments": ["submodule","init"]
	},{
		"name": "init:code",
		"description": "Fetches dependencies",
		"groups": [{
			"name": "init",
			"rank": 2
		}],
		"command": "git",
		"arguments": ["submodule","update"]
	},{
		"name": "init:haxe",
		"description": "Fetches packages",
		"groups": [{
			"name": "init",
			"rank": 3
		}],
		"command": "opentask",
		"arguments": ["rungroup","init:haxe"]
	},{
		"name": "init:haxe:cpp",
		"description": "Installs haxelib dependencies",
		"groups": [{
			"name": "init:haxe",
			"rank": 1
		}],
		"command": "haxelib",
		"arguments": [
			"install",
			"hxcpp"
		],
		"windows": {
			"arguments": [
				"install",
				"hxcpp",
				"minimingw"
			]
		}
	},{
		"name": "init:haxe:utest",
		"description": "Installs haxelib dependencies",
		"groups": [{
			"name": "init:haxe",
			"rank": 2
		}],
		"command": "haxelib",
		"arguments": [
			"install",
			"utest"
		]
	},

	{
		"name": "build:cpp",
		"description": "Transpiles Haxe to C++",
		"groups": [{
			"name": "build",
			"rank": 1
		}],
		"command": "haxe",
		"arguments": [
			"-cp", "src",
			"-cp", "common/src",
			"--cpp", "bin/cpp",
			"-main", "interealmGames.opentask.Main"
		]
	},{
		"name": "build:copy",
		"description": "Copies the executable into the /bin root and renames",
		"groups": [{
			"name": "build",
			"rank": 2
		}],
		"command": "cp",
		"arguments": ["bin/cpp/Main", "bin/opentask"],
		"windows": {
			"arguments": ["bin\\cpp\\Main.exe",  "/B", "bin\\opentask.exe",  "/B"]
		}
	},

	{
		"name": "test",
		"description": "Runs all tests",
		"groups": [{
			"name": "test",
			"rank": 0
		}],
		"command": "haxe",
		"arguments": [
			"-lib", "utest",
			"-cp", "src",
			"-cp", "common/src",
			"--interp",
			"--main", "interealmGames.opentask.Test"
		]
	}]
}
